<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/menu_flastlight"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow>
            <ImageButton
                android:id="@+id/ibtn_flashlight"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/custom_icon_flashlight"/>
            <ImageButton
                android:id="@+id/ibtn_bulbtwo"
                android:background="@android:color/transparent"
                android:padding="10dp"
                android:src="@drawable/custom_icon_bulbtwo"/>
            <ImageButton
                android:id="@+id/ibtn_car"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/custom_icon_car"/>
        </TableRow>
        <TableRow>
            <ImageButton
                android:id="@+id/ibtn_traffic"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:src="@drawable/traffic_lights"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>